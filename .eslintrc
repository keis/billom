---
  env:
    browser: false
    node: true
  rules:
    quotes: [2, single, avoid-escape]
    strict: 0
    semi: [2, never]
    no-mixed-requires: 0
    one-var: [2]
    max-len: [1, 80, 2]
    no-trailing-spaces: 2
    no-shadow: 0
    no-shadow-restricted-names: 2
    no-undefined: 2
    eqeqeq: [2, allow-null]
    no-underscore-dangle: 0
    no-use-before-define: 0
    no-return-assign: 0
    comma-style: [2, first]
    indent: [2, 2]
